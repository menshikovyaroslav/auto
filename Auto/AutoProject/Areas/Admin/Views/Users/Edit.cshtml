@using Front.Areas.Admin.Models;

@model Front.Areas.Admin.ViewModels.EditViewModel;

@{
    ViewBag.Title = "Edit user";
}

<h2>Изменить данные</h2>

<form method="post" asp-controller="Users" asp-action="Edit">

    <div class="formdiv">

        <table>
            <tr>
                <th>Login</th>
                <th>Email</th>
            </tr>
            <tr>
                <td>
                    <input class="inputfield" asp-for="Login" />
                </td>
                <td>
                    <input class="inputfield" asp-for="Email" />
                </td>
            </tr>

        </table>

    </div>

    <div>
        <nav>
            <input type="button" onclick="goToAdminUsers();" value="Back" />
            <input type="submit" value="Make changes" />
        </nav>
    </div>

</form>
