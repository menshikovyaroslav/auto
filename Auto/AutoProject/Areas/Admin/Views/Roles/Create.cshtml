@using Front.Areas.Admin.Models;
@using Microsoft.AspNetCore.Identity;

@model Front.ViewModels.CreateRoleViewModel;

@{
    ViewBag.Title = "Create role";
}

<form asp-action="Create" asp-controller="Roles" method="post">

    <div class="formdiv">

        <table>
            <tr>
                <th>Role Name</th>
            </tr>
            <tr>
                <td>
                    <input class="inputfield" asp-for="Name" />
                </td>
            </tr>

        </table>

    </div>

    <div>
        <nav>
            <input type="button" onclick="goToAdminRoles();" value="Back" />
            <input type="submit" value="Create" />
        </nav>
    </div>

</form>
