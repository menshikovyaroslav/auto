@using Front.Areas.Admin.Models;
@using Microsoft.AspNetCore.Identity

@model Front.Areas.Admin.ViewModels.EditUserRolesViewModel;

@{
    ViewBag.Title = "Edit roles";
}

<h2>Edit roles</h2>

<form asp-action="EditUser" asp-controller="Roles" method="post">

    <div class="formdiv">

        <table>
            <input type="hidden" name="userId" value="@Model.Id" />
            <div class="form-group">
                @foreach (IdentityRole role in Model.AllRoles)
                {
                    <input type="checkbox" name="roles" value="@role.Name"
                    @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />

                    @role.Name <br />
                }
            </div>
        </table>
    </div>

    <div>
        <nav>
            <input type="button" onclick="goToAdminUsers();" value="Back" />
            <input type="submit" value="Make changes" />
        </nav>
    </div>
</form>




