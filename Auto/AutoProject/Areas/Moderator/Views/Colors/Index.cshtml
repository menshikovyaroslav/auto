@using Front.Areas.Cars.Models;

@model IEnumerable<Color>

@{
	var error = TempData["Error"] as string;
	ViewBag.Title = "Colors";
}

@if (!string.IsNullOrEmpty(error))
{
	<div class="alert-danger">@error</div>
}

<h2>Colors</h2>
<p>
	<a class="createlabel" asp-action="Create">Create new color</a>
</p>
<table>
	<tr>
		<th>Name</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				<div class="color-item">
					<div class="color-circle" style="background-color: @item.Name;">
					</div>
					<span>@item.Name</span>
				</div>
			</td>

			<td>
				<a class="editlabel" asp-action="Edit" asp-controller="Colors" asp-route-id="@item.Id">Изменить</a>
			</td>
			<td>
				<form asp-action="Delete" method="post" asp-route-id="@item.Id">
					<input type="submit" value="Удалить" />
				</form>
			</td>
		</tr>
	}
</table>
