@using Front.Areas.Admin.Models;
@using Microsoft.AspNetCore.Identity
@using Front.Areas.Moderator.ViewModels;

@model EditColorViewModel;

@{
    ViewBag.Title = "Edit a color";
}

<h2>Edit a color</h2>

<form asp-action="Edit" asp-controller="Colors" method="post">

    <div class="formdiv">
        <table>
            <tr>
                <th>Color Name</th>
            </tr>
            <tr>
                <td>
                    <input class="inputfield" asp-for="Name" />
                </td>
            </tr>
        </table>
    </div>

    <div>
        <nav>
            <input type="button" onclick="goToModeratorColors();" value="Back" />
            <input type="submit" value="Make changes" />
        </nav>
    </div>
</form>


