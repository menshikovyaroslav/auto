@using Front.Areas.Admin.Models;
@using Front.Areas.Cars.Models
@using Microsoft.AspNetCore.Identity
@using Front.Areas.Moderator.ViewModels;

@model EditModelViewModel;

@{
    ViewBag.Title = "Edit model";
}

<h2>Изменить данные</h2>

<form asp-action="Edit" asp-controller="Models" method="post">

	<table>
		<tr>
			<th>Brand</th>
			<th>Model Name</th>
		</tr>

		<tr>
			<td>
				<select asp-for="BrandId">
					@foreach (Brand brand in Model.AllBrands)
					{
						<option value="@brand.Id">@brand.Name</option>
					}
				</select>
			</td>
			<td>
				<input asp-for="Name" />
			</td>
		</tr>

	</table>

	<div>
		<nav>
			<input type="button" onclick="goToModeratorModels();" value="Back" />
			<input type="submit" value="Make changes" />
		</nav>
	</div>
</form>


